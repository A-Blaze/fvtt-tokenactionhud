
<div class="tah-category{{#if cssClass}} {{cssClass}}{{/if}}" {{#if this.id}}id="tah-category-{{this.id}}"{{/if}}>
    <button class="tah-title-button"{{#if this.canFilter}} value="filter-{{this.id}}"{{/if}}{{#if this.holdsCompendiums}} value="compendiums-{{this.id}}"{{/if}}>{{cap this.name}} {{#if this.canFilter}}<i class="fa fa-filter" aria-hidden="true"></i>{{/if}}{{#if this.holdsCompendiums}}<i class="fa fa-book" aria-hidden="true"></i>{{/if}}</button>
    <div class="tah-content">
        {{#each subcategories}}
        {{>"modules/token-action-hud/templates/subcategory.hbs"}}
        {{/each}}
    </div>
</div>
